
<% if current_user.candidate.present? %>
  <h3> Selected Candidate </h3>
  <h4>Candidate</h4>
  Name = <b><%= current_user.candidate.name %></b></br>
  Age = <b><%= current_user.candidate.age %></b>
<% else %>
<h1>Choose Candidate</h1>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Select Candidate</th>
    </tr>
  </thead>

  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.name %></td>
        <td><%= candidate.age %></td>
        <td><%= link_to 'Select', home_select_candidate_path(:id => candidate.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

